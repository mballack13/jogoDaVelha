<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JogoDaVelha" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_crimson</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_crimson</item>
        <item name="colorSecondary">@color/yellow_01</item>
    </style>

    <!-- Customizing... -->

        <!-- button -->
            <style name="btn_gaming" parent="@style/Widget.AppCompat.Button.Small">
                <item name="android:layout_height">110dp</item>
                <item name="android:layout_margin">1dp</item>
                <item name="android:layout_width">120dp</item>
                <item name="android:textAppearance">?android:textAppearanceLarge</item>
                <item name="android:background">@color/white</item>
                <item name="android:textColor">@color/red_crimson</item>
                <item name="android:textSize">60sp</item>
                <item name="android:textStyle">bold</item>
                <item name="android:onClick">btnPosicao</item>
            </style>

            <style name="btn_reiniciar" parent="@style/Widget.AppCompat.Button.Small">
                <item name="android:layout_height">0dp</item>
                <item name="android:layout_margin">3dp</item>
                <item name="android:layout_weight">2</item>
                <item name="android:layout_width">match_parent</item>
                <item name="android:textAppearance">?android:textAppearanceLarge</item>
                <item name="android:background">@color/white</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:textSize">30sp</item>
                <item name="android:textStyle">bold</item>

            </style>

        <!-- imageView -->
            <style name="imgView_01" parent="@style/Widget.AppCompat.Button.Small">
                <item name="android:layout_height">0dp</item>
                <item name="android:layout_weight">1</item>
                <item name="android:layout_width">match_parent</item>
                <item name="android:scaleType">centerInside</item>
                <item name="android:adjustViewBounds">false</item>
                <item name="android:contentDescription">@string/hide_bottom_view_on_scroll_behavior</item>
                <item name="android:background">@color/white</item>
            </style>

            <style name="imgView_02" parent="@style/Widget.AppCompat.Button.Small">
                <item name="android:layout_height">65dp</item>
                <item name="android:layout_margin">1dp</item>
                <item name="android:layout_width">60dp</item>
            </style>


        <!-- LinearLayout -->
            <style name="linearLay_principal" parent="@style/Widget.AppCompat.ActionBar.TabView">
                <item name="android:adjustViewBounds">false</item>
                <item name="android:orientation">vertical</item>
                <item name="android:background">@color/white</item>
            </style>

        <!-- tableLayout -->
            <style name="tableLayout_01" parent="@style/Widget.AppCompat.ActionBar.TabView">
                <item name="android:layout_height">0dp</item>
                <item name="android:layout_weight">6</item>
                <item name="android:layout_width">match_parent</item>
                <item name="android:background">@color/white</item>
            </style>


</resources>